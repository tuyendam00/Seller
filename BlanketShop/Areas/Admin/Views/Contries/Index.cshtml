@model IEnumerable<Model.EF.Contries>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}

@section header{
    Danh sách các nước sản xuất
}

<p>
    @Html.ActionLink("Tạo mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Tên đất nước
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Country_name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Country_id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Country_id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Country_id })
        </td>
    </tr>
}

</table>
