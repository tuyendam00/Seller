            }
            else
            {
                <span style="padding-left:2%;color:red;">Xin lỗi hiện tại chúng tôi đang hết hàng</span>
            }
        </div>
        <div class="rightsidebar span_3_of_1">
            @{Html.RenderAction("ProductCategory", "Product");}
        </div>
    </div>
</div>
