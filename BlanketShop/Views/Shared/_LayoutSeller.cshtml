<!DOCTYPE HTML>
<head>
    <title>Cửa hàng đệm Hoa Thuyết</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <link href="/Assets/client/css/bootstrap.css" rel="stylesheet" />
    <link href="/Assets/client/css/boostrap-social.css" rel="stylesheet" />
    <link href="/Assets/client/css/bootstrap-theme.css" rel="stylesheet" />

    <link href="/Assets/client/css/jquery-ui.css" rel="stylesheet" />
    <link href="~/Assets/clientSeller/css/style.css" rel="stylesheet" />
    <link href="~/Assets/clientSeller/css/slider.css" rel="stylesheet" />
    <script src="~/Assets/clientSeller/js/jquery-1.7.2.min.js"></script>
    <script src="~/Assets/clientSeller/js/move-top.js"></script>
    <script src="~/Assets/clientSeller/js/easing.js"></script>
    <script src="~/Assets/clientSeller/js/startstop-slider.js"></script>
    <script src="~/Assets/clientSeller/js/easyResponsiveTabs.js"></script>
    <link href="~/Assets/clientSeller/css/easy-responsive-tabs.css" rel="stylesheet" />
    <link href="~/Assets/clientSeller/css/global.css" rel="stylesheet" />
    <script src="~/Assets/clientSeller/js/slides.min.jquery.js"></script>
</head>
<body>
    <div class="wrap">
        <div class="header">
            <div class="headertop_desc">
                @{Html.RenderAction("TopMenu", "Home");}
                
                <div class="clear"></div>
            </div>
            <div class="header_top">
                <div class="logo">
                    <a href="/"><img src="~/Assets/clientSeller/images/logo.png" alt="" /></a>
                </div>
                @{Html.RenderAction("HeaderCart", "Home");}
                <script type="text/javascript">
                    function DropDown(el) {
                        this.dd = el;
                        this.initEvents();
                    }
                    DropDown.prototype = {
                        initEvents: function () {
                            var obj = this;

                            obj.dd.on('click', function (event) {
                                $(this).toggleClass('active');
                                event.stopPropagation();
                            });
                        }
                    }

                    $(function () {

                        var dd = new DropDown($('#dd'));

                        $(document).click(function () {
                            // all dropdowns
                            $('.wrapper-dropdown-2').removeClass('active');
                        });

                    });

                </script>
                <div class="clear"></div>
            </div>
            <div class="header_bottom">
                @{Html.RenderAction("MainMenu", "Home");}
                
                <div class="search_box">
                    <form action="/tim-kiem" method="get">
                        <input type="text" id="txtKeyword" name="keyword" placeholder="Gõ từ khóa"><input type="submit" value="">
                    </form>
                </div>
                <div class="clear"></div>
            </div>
            <div class="header_slide">
                <div class="header_bottom_left">
                    <div class="categories">
                        @{Html.RenderAction("ProductCategory", "Product");}
                    </div>
                </div>
                <div class="header_bottom_right">
                    <div class="slider">
                        <div id="slider">
                            <div id="mover">
                                <div id="slide-1" class="slide">
                                    <div class="slider-img">
                                        <a href="preview.html">
                                            <img src="~/Assets/clientSeller/images/img1.jpg" />
                                        </a>
                                    </div>
                                    <div class="slider-text">
                                        <h1><br><span style="font-size:40px">CỬA HÀNG ĐỆM</span></h1>
                                        <h2>Hoa Thuyết</h2>
                                        <div class="features_list">
                                            <h4>Nơi giúp bạn có một giấc ngủ ngon</h4>
                                        </div>
                                        <a href="/" class="button">Mua ngay</a>
                                    </div>
                                    <div class="clear"></div>
                                </div>
                                <div class="slide" style="margin-left: 10px">
                                    <div class="slider-text">
                                        <h1><br><span style="font-size:40px">CỬA HÀNG ĐỆM</span></h1>
                                        <h2>Hoa thuyết</h2>
                                        <div class="features_list">
                                            <h4>Nơi giúp bạn có một giấc ngủ ngon</h4>
                                        </div>
                                        <a href="/" class="button">Mua ngay</a>
                                    </div>
                                    <div class="slider-img">
                                        <a href="preview.html">
                                            <img src="~/Assets/clientSeller/images/1feb820e8f7ca59957e7e08dd732ffea.jpg" />
                                        </a>
                                    </div>
                                    <div class="clear"></div>
                                </div>
                                <div class="slide"  style="margin-left: 110px" >
                                    <div class="slider-img">
                                        <a href="/">
                                            <img src="~/Assets/clientSeller/images/1b1ddf8a81e3479b3db20735ee0729ab.jpg" />
                                        </a>
                                    </div>
                                    <div class="slider-text">
                                        <h1><br><span style="font-size:40px">CỬA HÀNG ĐỆM</span></h1>
                                        <h2>Hoa Thuyết</h2>
                                        <div class="features_list">
                                            <h4>Nơi giúp bạn có một giấc ngủ ngon</h4>
                                        </div>
                                        <a href="preview.html" class="button">Mua ngay</a>
                                    </div>
                                    <div class="clear"></div>
                                </div>
                            </div>
                        </div>
                        <div class="clear"></div>
                    </div>
                </div>
                <div class="clear"></div>
            </div>
        </div>
        <div class="main">
            @RenderBody()
        </div>
    </div>
    <div class="footer">
        <div class="wrap">
            <div class="section group">
                <div class="col_1_of_4 span_1_of_4">
                    <h4>Information</h4>
                    <ul>
                        <li><a href="/">About Us</a></li>
                        <li><a href="/">Customer Service</a></li>
                        <li><a href="/">Advanced Search</a></li>
                        <li><a href="/">Orders and Returns</a></li>
                        <li><a href="/">Contact Us</a></li>
                    </ul>
                </div>
                <div class="col_1_of_4 span_1_of_4">
                    <h4>Why buy from us</h4>
                    <ul>
                        <li><a href="/">About Us</a></li>
                        <li><a href="/">Customer Service</a></li>
                        <li><a href="/">Privacy Policy</a></li>
                        <li><a href="/">Site Map</a></li>
                        <li><a href="/">Search Terms</a></li>
                    </ul>
                </div>
                <div class="col_1_of_4 span_1_of_4">
                    <h4>My account</h4>
                    <ul>
                        <li><a href="/">Sign In</a></li>
                        <li><a href="/">View Cart</a></li>
                        <li><a href="/">My Wishlist</a></li>
                        <li><a href="/">Track My Order</a></li>
                        <li><a href="/">Help</a></li>
                    </ul>
                </div>
                <div class="col_1_of_4 span_1_of_4">
                    <h4>Contact</h4>
                    <ul>
                        <li><span>+91-123-456789</span></li>
                        <li><span>+00-123-000000</span></li>
                    </ul>
                    <div class="social-icons">
                        <h4>Follow Us</h4>
                        <ul>
                            <li><a href="#" target="_blank"><img src="~/Assets/clientSeller/images/facebook.png" alt="" /></a></li>
                            <li><a href="#" target="_blank"><img src="~/Assets/clientSeller/images/twitter.png" alt="" /></a></li>
                            <li><a href="#" target="_blank"><img src="~/Assets/clientSeller/images/skype.png" alt="" /> </a></li>
                            <li><a href="#" target="_blank"> <img src="~/Assets/clientSeller/images/dribbble.png" alt="" /></a></li>
                            <li><a href="#" target="_blank"> <img src="~/Assets/clientSeller/images/linkedin.png" alt="" /></a></li>
                            <div class="clear"></div>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script type="text/javascript">
        $(document).ready(function () {
            $().UItoTop({ easingType: 'easeOutQuart' });

        });
    </script>
    <script src="/Assets/client/js/controller/baseController.js"></script>
    <a href="#" id="toTop"><span id="toTopHover"> </span></a>
    @RenderSection("jsFooter", required: false)
</body>
</html>

